@using System.Collections
@using CustomIdentityCore2.Web.Services
@model RoleViewModel

@{
    ViewData["Title"] = "Role ";
    var controllers = (IEnumerable<MvcControllerInfo>)ViewData["Controllers"];
}

<h2>Create Role</h2>

<hr />

